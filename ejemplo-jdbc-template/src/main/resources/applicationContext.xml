<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<!-- Datasource par acceder a BBDD -->
	<bean id="ds"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url" value="jdbc:mysql://localhost:3306/empresa3"></property>
		<property name="username" value="root"></property>
		<property name="password" value=""></property>
		<property name="driverClassName" value="com.mysql.jdbc.Driver">
		</property>
	</bean>

	<!-- Deginición de plantilla para el acceso a la BBDD -->
	<bean class="org.springframework.jdbc.core.JdbcTemplate" id="jdbcTemplate">
		<!-- aquí lo que se le pasa es el parámetro que necesita el constructor 
			de la plantilla, en este caso es un driver, el que hemos definido arriba -->
		<constructor-arg ref="ds" />
	</bean>

	<bean id="dao" class="es.curso.EmpleadoDAO">
		<property name="dataSource" ref="ds"/>
	</bean>
</beans>
